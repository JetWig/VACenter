    <div class="w-100 h-auto p-5 text-center">
        <i class="display-1 text-dark bi bi-file-earmark-plus"></i>
        <h1 class="display-2 mt-1">PIREPS</h1>
        <br>
        <form class="halfBgFullSm h-auto mx-auto form-control" action="/newPirep" method="POST" onsubmit="document.getElementsByName('flightTime')[0].removeAttribute('disabled');">
            <h1>New Pirep</h1>
            <br>
            <div class="form-control w-auto p-3">
            <label class="form-label">
                <h4>Aircraft</h4>
                <select class="form-select" name="vehicle" required>
                    <option selected disabled value="">==Select==</option>
                    <% data.crafts.forEach(craft =>{%>
                        <option value="<%= craft.name %>"><%= craft.name %></option>
                    <%})%>
                </select>
            </label>
            </div><br>
            <div class="form-control w-auto p-3">
                <label class="form-label">
                    <h4>Airline</h4>
                    <select class="form-select" name="airline" required>
                        <option selected disabled value="">==Select==</option>
                        <% data.ops.forEach(op=>{%>
                            <option value="<%= op.name %>">
                                <%= op.name %>
                            </option>
                            <%})%>
                    </select>
                </label>
            </div><br>
            <div class="form-control w-auto p-3">
                <label class="form-label">
                    <h4>Route</h4>
                    <input type="text" class="form-control" required list="routeList" name="route">
                    <datalist id="routeList">
                        <% data.routes.forEach(route=>{%>
                            <option value="<%= route.name %>">
                                <%= route.name %>
                            </option>
                            <%})%>
                    </datalist>
                </label>
            </div><br>
            <div class="form-control w-auto p-3">
                <label class="form-label">
                    <h4>Departure</h4>
                    <input type="datetime-local" required class="form-control" name="departureT">
                    <p class="text-muted">Give answer in Zulu</p>
                </label>
            </div><br>
            <div class="form-control w-auto p-3">
                <label class="form-label">
                    <h4>Arrival</h4>
                    <input type="datetime-local" required class="form-control" name="arrivalT">
                    <p class="text-muted">Give answer in Zulu</p>
                </label>
            </div><br>
            <div class="form-control w-auto p-3">
                <label class="form-label">
                    <h4>Flight Time</h4>
                    <input type="text form-disabled" disabled required class="form-control" name="flightTime">
                </label>
            </div><br>
            <div class="form-control w-auto p-3">
                <label class="form-label w-100">
                    <h4>Comments</h4>
                    <textarea class="form-text text-dark p-3 halfBgFullSm" required name="comments"></textarea>
                </label>
            </div><br>
            <button class="btn btn-primary">Submit</button>
        </form>
        
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
        crossorigin="anonymous"></script>
    <script>
        function adjust(v) {
                if (v > 9) {
                    return v.toString();
                } else {
                    return '0' + v.toString();
                }
            }
            var today = new Date();
            var date = today.getFullYear() + '-' + adjust(today.getMonth() + 1) + '-' + adjust(today.getDate());
            var time = adjust(today.getHours()) + ":" + adjust(today.getMinutes());
            var dateTime = `${date}T${time}`;
            document.getElementsByName("departureT")[0].value = dateTime
            document.getElementsByName("arrivalT")[0].value = dateTime
            function isValidDate(d) {
                    return d instanceof Date && !isNaN(d);
                }
            function updateFT(){
                    console.log("NEWFT")
                    const DDatePre = new Date(document.getElementsByName("departureT")[0].value)
                    const ADatePre = new Date(document.getElementsByName("arrivalT")[0].value)
                    const DDate = new Date(DDatePre.getTime() - DDatePre.getTimezoneOffset())
                    const ADate = new Date(ADatePre.getTime() - ADatePre.getTimezoneOffset())
                    if ((isValidDate(DDate) && isValidDate(ADate)) && DDate.getTime() <= ADate.getTime()) {
                        var diff = Math.abs(DDate - ADate)
                        var minutes = Math.floor((diff / 1000) / 60);
                        document.getElementsByName("flightTime")[0].value = minutes
                    }else{
                        document.getElementsByName("flightTime")[0].value = "ERROR"
                    }
            }
            updateFT()
            document.getElementsByName("departureT")[0].addEventListener("input", updateFT);
            document.getElementsByName("arrivalT")[0].addEventListener("input", updateFT);
    </script>
</body>

