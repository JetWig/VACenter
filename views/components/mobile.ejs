<script>
    let state = 'open';
    function toggleMenu() {
        if (state == 'open') {
            document.getElementById("navItemHolder").classList.toggle("d-none")
            document.getElementById("navmain").style.height = "auto";
            document.getElementById("accountMenu").style.width = "100%";
            document.getElementById("accountMenu").style.marginTop = document.getElementById("navmain").offsetHeight;
            document.getElementById("dropdownMenuButton1").style.padding = "0.5rem";
            document.getElementById("content").style.width = "100%"
            console.log("closing")
            state = "closed"
        } else {
            document.getElementById("navItemHolder").classList.toggle("d-none")
            document.getElementById("navmain").style.height = "100vh";
            state = "open"
            console.log("opening")
        }

    }
    if (document.body.offsetWidth < 1000) {
        toggleMenu()
    }
    console.log(document.body.offsetWidth)
</script>