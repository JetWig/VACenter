<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        Admin || <%= config.name %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
    <%- include("./../components/head.ejs")%>
</head>

<body class="w-100 bg-light-light h-auto">
    <%- include("./../components/nav.ejs")%>
        <div class="float-end content bg-light-light ps-3 pt-3" id="content" style="width: 80%;">
            <p class="text-muted">Click on an event to see more.</p>
            <div class="container">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Date</th>
                            <th scope="col">Locations</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% events.forEach(event=>{%>
                            <tr style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#modal-<%=event.id%>">
                                        <th scope="row">
                                            <%= event.title%>
                                        </th>
                                        <td>
                                            <%= new Date(event.depTime).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= event.depAir %> <i class="bi bi-chevron-right"></i> <%= event.arrAir%>
                                        </td>
                            </tr>


                            <%})%>
                    </tbody>
                </table>

                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Add Event
                </button>
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Add User</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form method="POST" action="/admin/reqs/newUser">
                                    <h2>Create new account</h2>
                                    <br>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1">
                                            <%= config.code%>
                                        </span>
                                        <input type="text" class="form-control" placeholder="Username"
                                            aria-label="Username" required="" aria-describedby="basic-addon1"
                                            name="username">
                                    </div>
                                    <input type="text" class="form-control mb-3" placeholder="Name" required=""
                                        aria-label="Name" name="Name">
                                    <input type="text" class="form-control mb-3" placeholder="IFC Username" required=""
                                        aria-label="IFC" name="IFC">
                                    <p class="fw-bold"><span class="text-danger">CAUTION</span>: Please make sure the
                                        IFC Name is correct, you can not
                                        change it later. It must be case correct.</p>
                                    <input type="password" class="form-control" placeholder="Password" required=""
                                        aria-label="Password" aria-describedby="basic-addon1" name="password">
                                    <div class="form-check mt-3 text-start">
                                        <input class="form-check-input" type="checkbox" value="yespls" checked=""
                                            disabled="" name="CPW" id="CPWCheck">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Require Password Change on login
                                        </label>
                                    </div>
                                    <div class="form-check mt-3 text-start">
                                        <input class="form-check-input" type="checkbox" value="true" name="admin"
                                            id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Admin
                                        </label>
                                        <p><strong>CAREFUL:</strong> This is a dangerous permission to grant.</p>
                                    </div>
                                    <button class="btn btn-primary">Create</button>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% events.forEach(event=>{%>
            <!-- Modal -->
            <div class="modal fade" id="modal-<%=event.id%>" tabindex="-1"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">
                                Event - <%= event.title%>
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <strong class="text-danger">Currently Uneditable</strong>
                            <br><br>
                            <h4>
                                <%= event.title%>
                            </h4>
                            <p>
                                <%= event.body%>
                            </p>
                            <hr>
                            <h5>Details</h5>
                            <p>
                                <strong><i class="fa fa-plane"></i> Aircraft:</strong>
                                <%= event.airName%><br>
                                    <strong><i class="fa fa-plane-departure"></i> Departure:</strong>
                                    <%= event.depAir%><br>
                                        <strong><i class="fa fa-plane-arrival"></i> Arrival:</strong>
                                        <%= event.arrAir%><br>
                                            <strong><i class="bi bi-globe2"></i> Server:</strong>
                                            <%= event.server%><br>
                                                <strong><i class="bi bi-calendar2"></i> Date:</strong>
                                                <%= new Date(event.depTime).toLocaleString("EN-AU", {Hour12: true})%><br>
                                                    <strong><i class="bi bi-card-checklist"></i> Gates:</strong>
                                                    <%= event.gates.slice(",").join(", ") %><br>
                            </p>
                            <button class="btn btn-danger" onclick="remData('e', '<%= event.id%>')"><i class="bi bi-x-circle"></i></button>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <%})%>
                <script>
                    function remData(type, id) {
                            const data = `id=${btoa(id)}`;
                            const xhr = new XMLHttpRequest();
                            xhr.withCredentials = true;
                            xhr.addEventListener("readystatechange", function () {
                                console.log(this)
                                if (this.readyState === this.DONE) {
                                    console.log(this.responseText);
                                }
                            });
                            xhr.open("DELETE", `/admin/reqs/remEvent`);
                            xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
                            xhr.send(data);
                            setTimeout(() => {
                                window.location.reload();
                            }, 1500);
                        }

                </script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
                    crossorigin="anonymous"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/suncalc/1.8.0/suncalc.min.js"
                    integrity="sha512-s40QuZdS5wcjdt2OHUWSGRCECWr+YqbvRSaiBpEKOlOsbePPvXreeOTB4SVteinFcc1RpW/uDueEsknm9iJl2g=="
                    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
                    <%- include("./../components/mobile")%>
</body>

</html>