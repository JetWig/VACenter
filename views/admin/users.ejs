<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        Admin || <%= config.display %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
    <%- include("./../components/head.ejs")%>
</head>

<body class="w-100 bg-light-light h-auto">
    <%- include("./../components/nav.ejs")%>
        <div class="w-100 content bg-light-light px-3 px-md-5 pt-3" id="content">
            <h2>Users</h2>
            <p class="text-muted">Click on a user to see more.</p>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Username</th>
                        <th scope="col">Rank</th>
                        <th scope="col">Name</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(target=>{%>
                        <tr <% if(target.revoked){%>style="background-color:rgba(255, 0, 0, 0.2) !important; cursor: pointer;"<%}else{%>style="cursor: pointer;"<%}%> data-bs-toggle="modal" data-bs-target="#modal-<%=target.username%>" <% if(target.revoked){%>style="background-color:rgba(255, 0, 0, 0.2) !important;"<%}%>>
                            <th scope="row">
                                <%= target.username %>
                            </th>
                            <td>
                                <%= target.rank %>
                            </td>
                            <td>
                                <%= target.display %>
                            </td>
                        </tr>

                        
                        <%})%>
                </tbody>
            </table>

            <button type="button" class="btn btn-<%= config.other.navColor[2] %>" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Add User
            </button>
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Add User</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="POST" action="/admin/users/new">
                                <h2>Create new account</h2>
                                <br>
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1"><%= config.code%></span>
                                    <input type="text" class="form-control" placeholder="Username" aria-label="Username" required=""
                                        aria-describedby="basic-addon1" name="username">
                                </div>
                                <input type="text" class="form-control mb-3" placeholder="Name" required="" aria-label="Name" name="Name">
                                <input type="text" class="form-control mb-3" placeholder="IFC Username" required="" aria-label="IFC" name="IFC">
                                <input type="number" class="form-control mb-3" min="0" placeholder="Starting Hours" required="" aria-label="hours" name="hours">
                                <p class="fw-bold"><span class="text-danger">CAUTION</span>: Please make sure the IFC Name is correct, you can not
                                    change it later. It must be case correct.</p>
                                <input type="password" class="form-control" placeholder="Password" required="" aria-label="Password"
                                    aria-describedby="basic-addon1" name="password">
                                <div class="form-check mt-3 text-start">
                                    <input class="form-check-input" type="checkbox" value="yespls" checked="" disabled="" name="CPW" id="CPWCheck">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        Require Password Change on login
                                    </label>
                                </div>
                                <div class="form-check mt-3 text-start">
                                    <input class="form-check-input" type="checkbox" value="true" name="admin" id="flexCheckDefault">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        Admin
                                    </label>
                                    <p><strong>CAREFUL:</strong> This is a dangerous permission to grant.</p>
                                </div>
                                <button class="btn btn-<%= config.other.navColor[2] %>">Create</button>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% users.forEach(target=>{%>
            <!-- Modal -->
            <div class="modal fade" id="modal-<%=target.username%>" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">
                                <%= config.code + target.username %>
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <h4>User <%= config.code + target.username %>
                            </h4>
                            <hr>
                            <form class="form-control p-3" method="POST" action="/admin/users/update">
                                <h5>User Options</h5>
                                <input type="hidden" value="<%= target.username%>" name="uid">
                                <label>Username: 
                                <input class="form-control" type="text"
                                    value="<%=target.username %>" disabled>
                                </label><br><br>
                                <label>Name:
                                    <input class="form-control" type="text" value="<%= target.display%>" name="name">
                                </label><br><br>
                                <button class="btn btn-primary">Change</button>
                            </form>
                            <form class="form-control p-3" method="POST" action="/admin/users/resetPWD">
                                <h5>Security</h5>
                                <input type="hidden" name="targetUID" value="<%=target.username%>">
                                <% if(target.cp == true || target.admin == true){%>
                                    <button class="btn btn-danger" disabled>Reset PWD</button>
                                    <%}else{%>
                                        <button class="btn btn-danger">Reset PWD</button>
                                        <p class="mt-3">The user's password will be set to <kbd class="bg-black">VACENTERBACKUP1</kbd> , next time they
                                            login
                                            they will also be prompted to
                                            change their password.</p>
                                        <%}%>
                                <br>
                                <label>Revoke/Reinstate User: </label>
                                <% if(target.revoked){%>
                                    <button onclick="unrevokeUser('<%= target.username%>')" type="button" class="btn btn-success"><i
                                            class="bi bi-check-circle"></i></button><br>
                                            <strong>The users password will be set to: <i>VACENTER_REVOKED_PASSWORD</i> </strong>
                                    <%}else if(target.username != user.username){%>
                                        <button onclick="revokeUser('<%= target.username%>')" type="button" class="btn btn-danger"><i
                                                class="bi bi-x-circle"></i></button>
                                        <%}else{%>
                                            <button class="btn btn-danger" disabled><i class="bi bi-x-circle"></i></button>
                                            <%}%>
                            </form>
                            <form class="form-control p-3">
                                <h5>Data</h5>
                                <p>
                                    <strong>Rank:</strong> <%=target.rank%><br>
                                    <strong>Flight Hours:</strong> <%=target.hours%><br>
                                    <strong>Last Login:</strong> <%= new Date(target.llogin).toLocaleString("EN-AU", {Hour12: true})%><br>
                                    <strong>Account Created:</strong> <%= new Date(target.created).toLocaleString("EN-AU", {Hour12: true})%>
                                </p>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        <%})%>
        <%- include('./../components/footer.ejs') %>
        <script>
            function revokeUser(user) {
                    const data = `uid=${encodeURIComponent(user)}`;
                    const xhr = new XMLHttpRequest();
                    xhr.withCredentials = true;
                    xhr.open("POST", "/admin/users/revoke");
                    xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
                    xhr.send(data);
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                }
            function unrevokeUser(user) {
                    const data = `uid=${encodeURIComponent(user)}`;
                    const xhr = new XMLHttpRequest();
                    xhr.withCredentials = true;
                    xhr.open("POST", "/admin/users/unrevoke");
                    xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
                    xhr.send(data);
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                }
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
            crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/suncalc/1.8.0/suncalc.min.js"
            integrity="sha512-s40QuZdS5wcjdt2OHUWSGRCECWr+YqbvRSaiBpEKOlOsbePPvXreeOTB4SVteinFcc1RpW/uDueEsknm9iJl2g=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>

</html>