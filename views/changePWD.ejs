    <link rel="stylesheet" href="assets/styles/scroll.css">
    <link rel="stylesheet" href="assets/styles/main.css">
    <%- include('components/head')%>
    <link rel="stylesheet" href="/public/styles/public.css">
</head>

<body class="w-100">
    <div class="box w-100">
        <div class="row header px-5 py-3 fs-5 w-100 end-0">
            <div class="d-block text-center text-md-left" style="line-height: 1.75em;">
                <span class="fw-bold float-md-start me-3">
                    <img src="<%= config.other.logo %>" class="rounded-circle"
                        style="object-fit: cover; width: 1em; height: 1em; vertical-align:text-bottom">
                    <%= config.name%>
                </span>
            </div>
        </div>
        <div class="row text-white content w-100 end-0"
            style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= config.other.bg %>');">
            <div class="position-relative py-5 px-3 px-md-5">
                <h2><%= config.name%></h2>
                <h1 class="display-3 fw-bold h-auto">Change Password</h1>
                <p class="fs-4">You have been requested to change your password.</p>
                <form class="w-100 form-control my-3 p-3 needs-validation" action="/CPWD" method="post" novalidate>
                    <h4>Change Password</h4>
                    <div>
                        <label class="fw-bold">New Password:</label>
                        <input class="form-control" type="password" placeholder="Password" name="npwd" required>
                    </div>
                    <br>
                    <button class="btn btn-primary">Change</button>
                </form>
            </div>
        </div>
        <div class="row footer text-dark w-100 bg-light">
            <div class="w-100 text-center p-2 pb-0">
                <p>Powered by VACenter V<%= version%>
                </p>
            </div>
        </div>
    </div>
